{
  "name": "vod-platform",
  "version": "1.0.0",
  "private": true,
  "description": "Video on Demand Platform - Monorepo",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev:web": "npm run dev --workspace=apps/web-client",
    "dev:api": "npm run dev --workspace=apps/api-server",
    "dev:worker": "npm run dev --workspace=apps/media-worker",
    "build:web": "npm run build --workspace=apps/web-client",
    "build:api": "npm run build --workspace=apps/api-server",
    "build:worker": "npm run build --workspace=apps/media-worker",
    "db:migrate": "npm run migrate --workspace=packages/database",
    "db:seed": "npm run seed --workspace=packages/database",
    "db:studio": "npm run studio --workspace=packages/database",
    "lint": "npm run lint --workspaces --if-present",
    "format": "prettier --write \"**/*.{ts,tsx,json,md}\"",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "docker:logs": "docker compose logs -f"
  },
  "devDependencies": {
    "prettier": "^3.2.0",
    "typescript": "^5.4.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  }
}
